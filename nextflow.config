workDir = "/media/md2/segment_work" // Here intermediate images/files will be stored for pipeline functionality, size may scale pretty fast.

params {
        DAPI_glob_pattern = "/media/tool/segmentation_benchmark/test_data/iss/gray_crop*.tif"
        ground_truth = "/media/tool/segmentation_benchmark/test_data/iss/segmented*_labeled.tif"

        global {
                outdir = "/media/md2/segment_output"
        }


        utils {
                tile = true
                target_tile_size_x = 4000
                target_tile_size_y = 4000
        }
}

profiles {
        stardist {
                includeConfig 'configs/stardist.config'
        } 

}
